sudo grep "Failed password" /var/log/auth.log
nano log_analyzer.sh
#!/bin/bash

LOG_FILE="/var/log/auth.log"

echo "===== Linux Log Analysis Report ====="
echo "Date: $(date)"
echo ""

echo "Total Failed Login Attempts:"
grep "Failed password" $LOG_FILE | wc -l
echo ""

echo "Top 5 IP Addresses with Failed Attempts:"
grep "Failed password" $LOG_FILE | awk '{print $(NF-3)}' | sort | uniq -c | sort -nr | head -5
echo ""

echo "Total Successful Logins:"
grep "Accepted password" $LOG_FILE | wc -l
echo ""

echo "Sudo Usage Attempts:"
grep "sudo" $LOG_FILE | wc -l
echo "======================================"
chmod +x log_analyzer.sh
sudo ./log_analyzer.sh
